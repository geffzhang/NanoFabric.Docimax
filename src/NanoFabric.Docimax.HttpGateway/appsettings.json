{
  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Information",
      "System": "Error",
      "Microsoft": "Error"
    }
  },
  "ServiceDiscovery": {
    "ServiceName": "Docimax_HttpGateway",
    "Version": "1.0.0-pre",
    "HealthCheckTemplate": "/administration/status",
    "Endpoints": [],
